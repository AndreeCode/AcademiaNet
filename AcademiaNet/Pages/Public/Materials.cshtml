@page
@model Academic.Pages.Public.MaterialsModel
@{
    ViewData["Title"] = "Materiales";
}

<div class="card shadow-sm">
    <div class="card-body d-flex justify-content-between align-items-center">
        <h3 class="mb-0">Biblioteca de materiales</h3>
        <div>
            @for (int w = 1; w <= 12; w++)
            {
                <a asp-page="/Public/Materials" asp-route-week="@w" class="btn btn-sm btn-outline-danger me-1">Semana @w</a>
            }
            <a asp-page="/Public/Materials" class="btn btn-sm btn-secondary ms-2">Todas</a>
        </div>
    </div>
</div>

<div class="row g-3 mt-3">
    @if (Model.Materials.Any())
    {
        foreach (var m in Model.Materials)
        {
            <div class="col-md-4">
                <div class="card h-100 shadow-sm">
                    <div class="card-body">
                        <h5>@m.Title</h5>
                        <p class="small text-muted mb-2">Ciclo: @m.Ciclo?.Nombre • Semana @m.Week</p>
                        <p>@m.Description</p>
                    </div>
                    <div class="card-footer bg-white">
                        @if (!string.IsNullOrEmpty(m.FileUrl))
                        {
                            <a href="@m.FileUrl" class="btn btn-sm btn-primary">Descargar</a>
                        }
                        else
                        {
                            <span class="text-muted small">No hay archivo adjunto</span>
                        }
                    </div>
                </div>
            </div>
        }
    }
    else
    {
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-body">
                    <p>No hay materiales disponibles.</p>
                </div>
            </div>
        </div>
    }
</div>

<style>
    .btn-outline-danger { color: #800020; border-color: #800020; }
    .btn-primary { background-color: #800020; border-color: #800020; }
</style>