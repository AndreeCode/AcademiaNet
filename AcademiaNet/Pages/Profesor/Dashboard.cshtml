@page
@model Academic.Pages.Profesor.DashboardModel
@{
    Layout = "~/Pages/Shared/_Layout.cshtml";
    ViewData["Title"] = "Dashboard Profesor";
}

<div class="container-fluid mt-4">
    @if (!string.IsNullOrEmpty(Model.StatusMessage))
    {
        <div class="alert alert-info alert-dismissible fade show" role="alert">
            @Model.StatusMessage
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="row">
        <!-- Sidebar -->
        <div class="col-md-3">
            <div class="card shadow-sm mb-3">
                <div class="card-body text-center">
                    <i class="bi bi-mortarboard fs-1 text-primary"></i>
                    <h5 class="mt-2 mb-0">Profesor</h5>
                    <small class="text-muted">@Model.ProfesorModel?.Nombre @Model.ProfesorModel?.Apellido</small>
                </div>
                <div class="list-group list-group-flush">
                    <a class="list-group-item list-group-item-action active" href="#">
                        <i class="bi bi-grid-fill"></i> Dashboard
                    </a>
                    <a class="list-group-item list-group-item-action" asp-page="/Materiales/Index">
                        <i class="bi bi-file-earmark-text"></i> Materiales
                    </a>
                    <a class="list-group-item list-group-item-action" asp-page="/Semanas/Gestionar">
                        <i class="bi bi-calendar-week"></i> Semanas
                    </a>
                </div>
            </div>

            <!-- Estadísticas -->
            <div class="card shadow-sm mb-3">
                <div class="card-header bg-info text-white">
                    <i class="bi bi-bar-chart"></i> Estadísticas
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <strong>Salones:</strong> @Model.MisSalones.Count
                    </div>
                    <div class="mb-3">
                        <strong>Alumnos:</strong> @Model.TotalAlumnos
                    </div>
                    <div class="mb-3">
                        <strong>Cursos:</strong> @Model.MisCursos.Count
                    </div>
                    <div class="mb-3">
                        <strong>Materiales:</strong> @Model.MisMateriales.Count
                    </div>
                </div>
            </div>
        </div>

        <!-- Contenido Principal -->
        <div class="col-md-9">
            <!-- Header -->
            <div class="card shadow-sm mb-4">
                <div class="card-body d-flex justify-content-between align-items-center">
                    <div>
                        <h3 class="mb-0"><i class="bi bi-mortarboard-fill"></i> Panel del Profesor</h3>
                        <small class="text-muted">
                            @if (Model.CicloActual != null)
                            {
                                <span>Ciclo: @Model.CicloActual.Nombre</span>
                            }
                        </small>
                    </div>
                </div>
            </div>

            <!-- Crear Material -->
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-success text-white">
                    <i class="bi bi-plus-circle"></i> <strong>Crear Nuevo Material</strong>
                </div>
                <div class="card-body">
                    <form method="post" asp-page-handler="CrearMaterial">
                        <div class="row g-3">
                            <div class="col-md-6">
                                <label class="form-label">Título *</label>
                                <input asp-for="NewMaterialTitle" class="form-control" placeholder="Título del material" required />
                            </div>
                            <div class="col-md-3">
                                <label class="form-label">Semana</label>
                                <select asp-for="NewMaterialWeek" class="form-select">
                                    @for (int i = 1; i <= 20; i++)
                                    {
                                        <option value="@i">Semana @i</option>
                                    }
                                </select>
                            </div>
                            <div class="col-md-3">
                                <label class="form-label">Salón (Opcional)</label>
                                <select asp-for="NewMaterialSalonId" class="form-select">
                                    <option value="">Todos</option>
                                    @foreach (var salon in Model.MisSalones)
                                    {
                                        <option value="@salon.Id">@salon.Nombre</option>
                                    }
                                </select>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label">Curso (Opcional)</label>
                                <select asp-for="NewMaterialCursoId" class="form-select">
                                    <option value="">Sin asignar</option>
                                    @foreach (var curso in Model.MisCursos)
                                    {
                                        <option value="@curso.Id">@curso.Nombre</option>
                                    }
                                </select>
                            </div>
                            <div class="col-md-12">
                                <label class="form-label">Descripción</label>
                                <textarea asp-for="NewMaterialDescription" class="form-control" rows="3" placeholder="Descripción del material"></textarea>
                            </div>
                            <div class="col-md-12">
                                <button type="submit" class="btn btn-success">
                                    <i class="bi bi-plus-circle"></i> Crear Material
                                </button>
                                <a asp-page="/Materiales/Subir" class="btn btn-primary">
                                    <i class="bi bi-cloud-upload"></i> Subir Archivo
                                </a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Mis Salones -->
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-dark text-white">
                    <i class="bi bi-door-open"></i> <strong>Mis Salones</strong>
                </div>
                <div class="card-body">
                    <div class="row g-3">
                        @foreach (var salon in Model.MisSalones)
                        {
                            <div class="col-md-6">
                                <div class="card">
                                    <div class="card-header">
                                        <strong>@salon.Nombre</strong> - @salon.Sede?.Nombre
                                    </div>
                                    <div class="card-body">
                                        <p class="mb-2">
                                            <i class="bi bi-people"></i> 
                                            <strong>Alumnos:</strong> @(salon.Alumnos?.Count ?? 0)
                                        </p>
                                        <p class="mb-2">
                                            <i class="bi bi-person-badge"></i> 
                                            <strong>Tutores:</strong>
                                        </p>
                                        @if (salon.TutorSalones != null && salon.TutorSalones.Any())
                                        {
                                            <ul class="list-unstyled mb-0">
                                                @foreach (var ts in salon.TutorSalones)
                                                {
                                                    <li><small>• @ts.Tutor?.Nombre @ts.Tutor?.Apellido</small></li>
                                                }
                                            </ul>
                                        }
                                        else
                                        {
                                            <p class="text-muted mb-0"><small>Sin tutores asignados</small></p>
                                        }
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>

            <!-- Horarios -->
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-warning">
                    <i class="bi bi-clock"></i> <strong>Mis Horarios</strong>
                </div>
                <div class="card-body">
                    @if (Model.MisHorarios.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>Día</th>
                                        <th>Salón</th>
                                        <th>Sede</th>
                                        <th>Hora Inicio</th>
                                        <th>Hora Fin</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var h in Model.MisHorarios)
                                    {
                                        <tr>
                                            <td><strong>@h.Dia</strong></td>
                                            <td>@h.Salon?.Nombre</td>
                                            <td>@h.Salon?.Sede?.Nombre</td>
                                            <td>@h.HoraInicio.ToString(@"hh\:mm")</td>
                                            <td>@h.HoraFin.ToString(@"hh\:mm")</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <p class="text-muted">No tienes horarios asignados.</p>
                    }
                </div>
            </div>

            <!-- Mis Materiales -->
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-primary text-white">
                    <i class="bi bi-file-earmark-text"></i> <strong>Mis Materiales Recientes</strong>
                </div>
                <div class="card-body">
                    @if (Model.MisMateriales.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover table-sm">
                                <thead>
                                    <tr>
                                        <th>Título</th>
                                        <th>Semana</th>
                                        <th>Salón</th>
                                        <th>Curso</th>
                                        <th>Fecha</th>
                                        <th>Acciones</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var m in Model.MisMateriales)
                                    {
                                        <tr>
                                            <td>@m.Title</td>
                                            <td>
                                                @if (m.Semana != null)
                                                {
                                                    <span>Sem. @m.Semana.NumeroSemana</span>
                                                }
                                                else
                                                {
                                                    <span>Sem. @m.Week</span>
                                                }
                                            </td>
                                            <td>@(m.Salon?.Nombre ?? "Todos")</td>
                                            <td>@(m.Curso?.Nombre ?? "-")</td>
                                            <td><small>@m.CreatedAt.ToString("dd/MM/yyyy")</small></td>
                                            <td>
                                                <form method="post" class="d-inline">
                                                    <button type="submit"
                                                            asp-page-handler="EliminarMaterial"
                                                            asp-route-materialId="@m.Id"
                                                            class="btn btn-sm btn-outline-danger"
                                                            onclick="return confirm('¿Eliminar material?')">
                                                        <i class="bi bi-trash"></i>
                                                    </button>
                                                </form>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                        <div class="text-center mt-3">
                            <a asp-page="/Materiales/Index" class="btn btn-outline-primary">
                                <i class="bi bi-eye"></i> Ver Todos los Materiales
                            </a>
                        </div>
                    }
                    else
                    {
                        <p class="text-muted">No has creado materiales aún.</p>
                        <a asp-page="/Materiales/Subir" class="btn btn-primary">
                            <i class="bi bi-plus-circle"></i> Crear Primer Material
                        </a>
                    }
                </div>
            </div>

            <!-- Semanas del Ciclo -->
            @if (Model.SemanasDelCiclo.Any())
            {
                <div class="card shadow-sm">
                    <div class="card-header bg-info text-white">
                        <i class="bi bi-calendar-week"></i> <strong>Semanas del Ciclo Actual</strong>
                    </div>
                    <div class="card-body">
                        <div class="row g-2">
                            @foreach (var semana in Model.SemanasDelCiclo.Take(12))
                            {
                                <div class="col-md-3">
                                    <div class="card @(semana.IsActive ? "border-success" : "border-secondary")">
                                        <div class="card-body p-2">
                                            <h6 class="mb-1">Semana @semana.NumeroSemana</h6>
                                            <small class="text-muted">@semana.Tema</small>
                                            <br><small>@semana.FechaInicio.ToString("dd/MM") - @semana.FechaFin.ToString("dd/MM")</small>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                        <div class="text-center mt-3">
                            <a asp-page="/Semanas/Gestionar" class="btn btn-outline-info">
                                <i class="bi bi-calendar-week"></i> Gestionar Todas las Semanas
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

<style>
    .card-header.bg-dark { background-color: #800020 !important; }
</style>