@page
@model Academic.Pages.Admin.CreateTutorModel
@{
    ViewData["Title"] = "Crear Nuevo Tutor";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0"><i class="bi bi-person-plus"></i> Crear Nuevo Tutor</h4>
                </div>
                <div class="card-body">
                    @if (!string.IsNullOrEmpty(Model.StatusMessage))
                    {
                        <div class="alert alert-info alert-dismissible fade show" role="alert">
                            @Model.StatusMessage
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    <form method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <div class="mb-3">
                            <label asp-for="Input.Nombre" class="form-label">Nombre *</label>
                            <input asp-for="Input.Nombre" class="form-control" placeholder="Ej: Juan" />
                            <span asp-validation-for="Input.Nombre" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Input.Apellido" class="form-label">Apellido *</label>
                            <input asp-for="Input.Apellido" class="form-control" placeholder="Ej: Pérez" />
                            <span asp-validation-for="Input.Apellido" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Input.Email" class="form-label">Email *</label>
                            <input asp-for="Input.Email" type="email" class="form-control" placeholder="tutor@academia.local" />
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                            <small class="form-text text-muted">Este será su usuario para iniciar sesión</small>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Input.Password" class="form-label">Contraseña *</label>
                            <input asp-for="Input.Password" type="password" class="form-control" />
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                            <small class="form-text text-muted">Mínimo 6 caracteres</small>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Input.ConfirmPassword" class="form-label">Confirmar Contraseña *</label>
                            <input asp-for="Input.ConfirmPassword" type="password" class="form-control" />
                            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                        </div>

                        <div class="mb-3 form-check">
                            <input asp-for="Input.IsActive" class="form-check-input" />
                            <label asp-for="Input.IsActive" class="form-check-label">Activo</label>
                            <small class="form-text text-muted d-block">Los tutores inactivos no pueden acceder al sistema</small>
                        </div>

                        <div class="alert alert-info">
                            <i class="bi bi-info-circle"></i>
                            <strong>Nota:</strong> Se creará automáticamente una cuenta de usuario con rol "Tutor" y una entrada en el dominio de tutores.
                        </div>

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-4">
                            <a asp-page="/Admin/Dashboard" class="btn btn-secondary">
                                <i class="bi bi-arrow-left"></i> Cancelar
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-save"></i> Crear Tutor
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            <div class="card shadow-sm mt-3">
                <div class="card-body">
                    <h6><i class="bi bi-shield-check"></i> Información de Seguridad</h6>
                    <ul class="mb-0 small">
                        <li>La contraseña debe tener al menos 6 caracteres</li>
                        <li>Se recomienda usar una combinación de letras y números</li>
                        <li>El tutor podrá cambiar su contraseña después de iniciar sesión</li>
                        <li>Guarde las credenciales de forma segura para entregarlas al tutor</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<style>
    .card-header.bg-primary { background-color: #800020 !important; }
    .btn-primary { background-color: #800020; border-color: #800020; }
    .btn-primary:hover { background-color: #660019; border-color: #660019; }
</style>
