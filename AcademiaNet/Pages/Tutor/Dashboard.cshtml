@page
@model Academic.Pages.Tutor.DashboardModel
@{
    Layout = "~/Pages/Shared/_Layout.cshtml";
    ViewData["Title"] = "Dashboard Tutor";
}

<div class="container-fluid mt-4">
    @if (!string.IsNullOrEmpty(Model.StatusMessage))
    {
        <div class="alert alert-info alert-dismissible fade show" role="alert">
            @Model.StatusMessage
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="row">
        <div class="col-md-3">
            <div class="card shadow-sm mb-3">
                <div class="card-body text-center">
                    <i class="bi bi-person-badge fs-1 text-primary"></i>
                    <h5 class="mt-2 mb-0">Tutor</h5>
                    <small class="text-muted">@Model.Tutor?.Nombre @Model.Tutor?.Apellido</small>
                </div>
                <div class="list-group list-group-flush">
                    <a class="list-group-item list-group-item-action active" href="#">
                        <i class="bi bi-grid-fill"></i> Resumen
                    </a>
                    <a class="list-group-item list-group-item-action" asp-page="/Materiales/Index">
                        <i class="bi bi-file-earmark-text"></i> Materiales
                    </a>
                </div>
            </div>

            <div class="card shadow-sm">
                <div class="card-header bg-warning">
                    <i class="bi bi-clock-history"></i> Matrículas Pendientes
                </div>
                <div class="card-body">
                    @if (Model.MatriculasPendientes.Any())
                    {
                        <p class="mb-2"><strong>@Model.MatriculasPendientes.Count</strong> matrículas esperan aprobación</p>
                    }
                    else
                    {
                        <p class="text-muted mb-0">No hay matrículas pendientes</p>
                    }
                </div>
            </div>
        </div>

        <div class="col-md-9">
            <!-- Matrículas Pendientes -->
            @if (Model.MatriculasPendientes.Any())
            {
                <div class="card shadow-sm mb-4">
                    <div class="card-header bg-warning">
                        <i class="bi bi-exclamation-triangle"></i> <strong>Matrículas Pendientes de Aprobación</strong>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>Alumno</th>
                                        <th>Email</th>
                                        <th>Ciclo</th>
                                        <th>Monto</th>
                                        <th>Fecha</th>
                                        <th>Acciones</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var m in Model.MatriculasPendientes)
                                    {
                                        <tr>
                                            <td>@m.Alumno.Nombre @m.Alumno.Apellido</td>
                                            <td><small>@m.Alumno.Email</small></td>
                                            <td>@m.Ciclo.Nombre</td>
                                            <td>@m.Moneda @m.Monto.ToString("N2")</td>
                                            <td><small>@m.CreatedAt.ToString("dd/MM/yyyy")</small></td>
                                            <td>
                                                <form method="post" class="d-inline">
                                                    <button type="submit" 
                                                            asp-page-handler="AprobarMatricula" 
                                                            asp-route-matriculaId="@m.Id" 
                                                            class="btn btn-sm btn-success"
                                                            onclick="return confirm('¿Aprobar matrícula de @m.Alumno.Nombre?')">
                                                        <i class="bi bi-check-circle"></i> Aprobar
                                                    </button>
                                                    <button type="submit" 
                                                            asp-page-handler="RechazarMatricula" 
                                                            asp-route-matriculaId="@m.Id" 
                                                            class="btn btn-sm btn-danger"
                                                            onclick="return confirm('¿Rechazar matrícula de @m.Alumno.Nombre?')">
                                                        <i class="bi bi-x-circle"></i> Rechazar
                                                    </button>
                                                </form>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            }

            <!-- Salones -->
            <div class="card shadow-sm mb-3">
                <div class="card-header bg-dark text-white">
                    <i class="bi bi-door-open"></i> <strong>Mis Salones</strong>
                </div>
            </div>

            <div class="row g-3">
                @if (Model.Salones.Any())
                {
                    foreach (var s in Model.Salones)
                    {
                        <div class="col-md-6">
                            <div class="card shadow-sm h-100">
                                <div class="card-header bg-dark text-white">
                                    <i class="bi bi-door-closed"></i> @s.Nombre 
                                    <small class="text-muted">(@s.Sede?.Nombre)</small>
                                </div>
                                <div class="card-body">
                                    <!-- Alumnos -->
                                    <h6><i class="bi bi-people"></i> Alumnos (@(s.Alumnos?.Count ?? 0))</h6>
                                    @if (s.Alumnos != null && s.Alumnos.Any())
                                    {
                                        <ul class="list-unstyled">
                                            @foreach (var a in s.Alumnos)
                                            {
                                                <li class="mb-2">
                                                    <div class="d-flex justify-content-between align-items-center">
                                                        <div>
                                                            <i class="bi bi-person"></i> @a.Nombre @a.Apellido
                                                            <br><small class="text-muted">@a.Email</small>
                                                        </div>
                                                        <div>
                                                            <button type="button" 
                                                                    class="btn btn-sm btn-outline-secondary" 
                                                                    data-bs-toggle="modal" 
                                                                    data-bs-target="#cambiarSalonModal-@a.Id">
                                                                <i class="bi bi-arrow-left-right"></i>
                                                            </button>
                                                        </div>
                                                    </div>

                                                    <!-- Modal para cambiar salón -->
                                                    <div class="modal fade" id="cambiarSalonModal-@a.Id" tabindex="-1">
                                                        <div class="modal-dialog">
                                                            <div class="modal-content">
                                                                <div class="modal-header">
                                                                    <h5 class="modal-title">Cambiar Salón de @a.Nombre</h5>
                                                                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                                                </div>
                                                                <form method="post" asp-page-handler="CambiarSalonAlumno" asp-route-alumnoId="@a.Id">
                                                                    <div class="modal-body">
                                                                        <label class="form-label">Nuevo Salón:</label>
                                                                        <select name="nuevoSalonId" class="form-select" required>
                                                                            @foreach (var salon in Model.Salones)
                                                                            {
                                                                                <option value="@salon.Id" selected="@(salon.Id == s.Id)">
                                                                                    @salon.Nombre - @salon.Sede?.Nombre
                                                                                </option>
                                                                            }
                                                                        </select>
                                                                    </div>
                                                                    <div class="modal-footer">
                                                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                                                                        <button type="submit" class="btn btn-primary">Cambiar</button>
                                                                    </div>
                                                                </form>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </li>
                                            }
                                        </ul>
                                    }
                                    else
                                    {
                                        <p class="text-muted">Sin alumnos</p>
                                    }

                                    <hr />

                                    <!-- Horario -->
                                    <h6><i class="bi bi-clock"></i> Horarios</h6>
                                    @if (s.Horarios != null && s.Horarios.Any())
                                    {
                                        <ul class="list-unstyled">
                                            @foreach (var h in s.Horarios.OrderBy(h => h.Dia))
                                            {
                                                <li><small>@h.Dia: @h.HoraInicio.ToString(@"hh\:mm") - @h.HoraFin.ToString(@"hh\:mm")</small></li>
                                            }
                                        </ul>
                                    }
                                    else
                                    {
                                        <p class="text-muted">Sin horarios</p>
                                    }

                                    <hr />

                                    <!-- Materiales -->
                                    <h6><i class="bi bi-file-earmark-text"></i> Materiales (@(s.Materiales?.Count ?? 0))</h6>
                                    @if (s.Materiales != null && s.Materiales.Any())
                                    {
                                        <ul class="list-unstyled">
                                            @foreach (var m in s.Materiales.OrderBy(m => m.Week).Take(3))
                                            {
                                                <li><small>Sem. @m.Week: @m.Title</small></li>
                                            }
                                        </ul>
                                    }
                                    else
                                    {
                                        <p class="text-muted">Sin materiales</p>
                                    }

                                    <!-- Crear Material -->
                                    <div class="card bg-light mt-3">
                                        <div class="card-body">
                                            <h6 class="card-title">Agregar Material</h6>
                                            <form method="post" asp-page-handler="CreateMaterial" asp-route-salonId="@s.Id">
                                                <div class="mb-2">
                                                    <input asp-for="NewMaterialTitle" class="form-control form-control-sm" placeholder="Título" />
                                                </div>
                                                <div class="mb-2">
                                                    <textarea asp-for="NewMaterialDescription" class="form-control form-control-sm" rows="2" placeholder="Descripción"></textarea>
                                                </div>
                                                <div class="row g-2">
                                                    <div class="col-6">
                                                        <input asp-for="NewMaterialWeek" type="number" min="1" class="form-control form-control-sm" placeholder="Semana" />
                                                    </div>
                                                    <div class="col-6">
                                                        <button class="btn btn-success btn-sm w-100">
                                                            <i class="bi bi-plus-circle"></i> Crear
                                                        </button>
                                                    </div>
                                                </div>
                                            </form>
                                        </div>
                                    </div>

                                    <!-- Crear Alumno -->
                                    <div class="card bg-light mt-3">
                                        <div class="card-body">
                                            <h6 class="card-title">Agregar Alumno</h6>
                                            <form method="post" asp-page-handler="CreateStudent" asp-route-salonId="@s.Id">
                                                <div class="mb-2">
                                                    <input asp-for="NewStudentNombre" class="form-control form-control-sm" placeholder="Nombre" />
                                                </div>
                                                <div class="mb-2">
                                                    <input asp-for="NewStudentApellido" class="form-control form-control-sm" placeholder="Apellido" />
                                                </div>
                                                <div class="mb-2">
                                                    <input asp-for="NewStudentEmail" class="form-control form-control-sm" placeholder="Email" />
                                                </div>
                                                <button class="btn btn-primary btn-sm w-100">
                                                    <i class="bi bi-person-plus"></i> Crear Alumno
                                                </button>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                }
                else
                {
                    <div class="col-12">
                        <div class="alert alert-warning">
                            <i class="bi bi-exclamation-triangle"></i> No tienes salones asignados.
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<style>
    .card-header.bg-dark { background-color: #800020 !important; }
    .btn-outline-secondary:hover { background-color: #800020; border-color: #800020; color: white; }
</style>